<% content_for(:title) { "Sign In - Bookshelf" } %>

<div class="auth-container">
  <div class="auth-card">
    <h1 class="auth-title">Welcome Back</h1>
    <p class="auth-subtitle">Sign in to access your personal library</p>

    <%= form_with(model: @user, url: login_path, local: true, class: "auth-form") do |form| %>
      <div class="form-group">
        <%= form.label :email, "Email", class: "form-label" %>
        <%= form.email_field :email, class: "form-input", placeholder: "Enter your email address" %>
        <% if @user.errors[:email].any? %>
          <div class="field-error">
            <% @user.errors[:email].each do |error| %>
              <span class="error-message">Email <%= error %></span>
            <% end %>
          </div>
        <% end %>
      </div>

      <div class="form-group">
        <%= form.label :password, "Password", class: "form-label" %>
        <%= form.password_field :password, class: "form-input", placeholder: "Enter your password" %>
        <% if @user.errors[:password].any? %>
          <div class="field-error">
            <% @user.errors[:password].each do |error| %>
              <span class="error-message">Password <%= error %></span>
            <% end %>
          </div>
        <% end %>
      </div>

      <%= form.submit "Sign In", class: "auth-button primary" %>
    <% end %>

    <div class="auth-links">
      <p>Don't have an account? <%= link_to "Sign up", signup_path, class: "auth-link" %></p>
    </div>
  </div>
</div>
