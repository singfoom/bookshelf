<div class="homepage-container">
  <h1 class="homepage-title">Welcome to Bookshelf</h1>
  
  <div class="stats-grid">
    <div class="stat-card authors">
      <h2 class="stat-title">Authors</h2>
      <p class="stat-number"><%= @authors_count %></p>
      <p class="stat-description">Total authors in our collection</p>
    </div>
    
    <div class="stat-card books">
      <h2 class="stat-title">Books</h2>
      <p class="stat-number"><%= @books_count %></p>
      <p class="stat-description">Total books in our library</p>
    </div>
  </div>
  
  <% if @recent_books.any? %>
    <div class="books-section">
      <h2 class="section-title">Recent Books</h2>
      <div class="books-list">
        <% @recent_books.each do |book| %>
          <div class="book-item">
            <h3 class="book-title"><%= book.title %></h3>
            <p class="book-author">by <%= book.author.full_name %></p>
            <p class="book-genre">Genre: <%= book.genre %></p>
          </div>
        <% end %>
      </div>
    </div>
  <% else %>
    <div class="empty-state">
      <h2 class="empty-state-title">No books yet</h2>
      <p class="empty-state-description">Your bookshelf is empty. Start adding some books!</p>
    </div>
  <% end %>
</div>
